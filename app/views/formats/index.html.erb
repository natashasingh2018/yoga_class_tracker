<div class="page-header">
  <h1>
    Formats
    <a href="/formats/new" class="btn btn-lg btn-success">New Format</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @formats.each do |format| %>
      <tr>
        <td><%= format.title %></td>
        <td><%= format.description %></td>
        <td>
          <!-- <a href="/formats/<%= format.id %>" class="btn btn-primary">Show</a> -->
          <a href="/formats/<%= format.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_format/<%= format.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
