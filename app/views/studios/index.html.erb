<div class="page-header">
  <h1>
    Studios
    <a href="/studios/new" class="btn btn-lg btn-success">New Studio</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Actions</th>
      </tr>

      <% @studios.each do |studio| %>
      <tr>
        <td><%= studio.name %></td>
        <td><%= studio.location %></td>
        <td>
          <a href="/studios/<%= studio.id %>" class="btn btn-primary">Show</a>
          <a href="/studios/<%= studio.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_studio/<%= studio.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
