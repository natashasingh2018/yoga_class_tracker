<div class="page-header">
  <h3>Studio #<%= @studio.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @studio.name %></dd>

      <dt>Location</dt>
      <dd><%= @studio.location %></dd>
      <dt>Latitude</dt>
      <dd><%= @latitude %></dd>
      <dt>Longitude</dt>
      <dd><%= @longitude %></dd>


      <dt>Map</dt>
<dd>
  <!-- Code for Google Map -->
  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
  <script>
    var map;
    function initialize() {

      var myLatlng = new google.maps.LatLng(<%=@latitude %>, <%=@longitude %>);

      var mapOptions = {
        zoom: 15,
        center: myLatlng
      };

      map = new google.maps.Map(document.getElementById('map-canvas'),
        mapOptions);

      var marker = new google.maps.Marker({
            position: myLatlng,
            map: map,
            title: 'My Studio'
        });
    }

    google.maps.event.addDomListener(window, 'load', initialize);

  </script>
  <div id="map-canvas"></div>
</dd>


    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/studios" class="btn btn-primary">
        Back
      </a>
      <a href="/studios/<%= @studio.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_studio/<%= @studio.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
